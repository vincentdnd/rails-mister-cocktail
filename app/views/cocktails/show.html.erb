<div class="container">
  <h1><%= @cocktail.name %></h1>

  <%= cl_image_tag @cocktail.photo.url || 'https://images.unsplash.com/photo-1523371054106-bbf80586c38c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fb1bd19c5235effb1efaf7ed93231713&auto=format&fit=crop&w=334&q=80', height: 300, width: 400, crop: :fill %>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> | <%= dose.ingredient.name %>  <%= link_to "Delete", delete_doses_path(dose), method: :delete, id: "deleteLink"  %> </li>
    <% end %>
  </ul>

  <br>
  <%= link_to "Back to main menu", cocktails_path, id: "backToMenuLink" %>
  <br>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), id: "addDose" %>
  <br>
  <%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete, id: "deleteCocktail" %>
</div>



