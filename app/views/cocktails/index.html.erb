<div class="banner" style="background-image: linear-gradient(-225deg, rgba(50,50,50,0.6) 0%, rgba(50,50,50,0.6) 50%), url('https://images.unsplash.com/photo-1511795267602-0424436b99c5?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=debba50eeb87b5f62ad298a024394b1c&auto=format&fit=crop&w=750&q=80');">
  <div class="banner-content">
    <h1>Chez Doudou</h1>
    <p>The finest cocktails in town</p>
    <%= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-warning' %>
  </div>
</div>


<div class="container">
  <h1>Coktails List</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
      <!-- <p><%= cocktail.id %></p> -->
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo.url || 'https://images.unsplash.com/photo-1523371054106-bbf80586c38c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fb1bd19c5235effb1efaf7ed93231713&auto=format&fit=crop&w=334&q=80'%>')">
          <a class = "card-link" href="/cocktails/<%= cocktail.id %>"></a>
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
</div>

