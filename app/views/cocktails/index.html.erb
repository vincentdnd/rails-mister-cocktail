<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,10,16,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1516813127689-b75da14cce70?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=b295010c6fe4b64ed9dc58fc373e1b2b&auto=format&fit=crop&w=774&q=80 774w');">
  <div class="banner-content">
    <h1>Chez Doudou</h1>
    <p>The finest cocktails in town</p>
    <%= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>


<div class="container">
  <h1>Coktails' List</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
</div>

